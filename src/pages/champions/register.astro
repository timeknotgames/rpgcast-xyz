---
import Layout from '../../layouts/Layout.astro';
import ChampionRegistration from '../../islands/ChampionRegistration';
---

<Layout title="Become a Champion | RPGCast.xyz">
  <div class="max-w-2xl mx-auto px-6 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Become a Champion</h1>
      <p class="text-gray-400 max-w-xl mx-auto">
        Champions host game sessions, promote tokens, and build communities.
        Register to start your journey.
      </p>
    </div>

    <ChampionRegistration client:load />
  </div>
</Layout>
