---
import Layout from '../layouts/Layout.astro';
---

<Layout title="My Portfolio | RPGCast.xyz">
  <main class="max-w-6xl mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold">My Portfolio</h1>
        <p class="text-gray-400 mt-2">Manage your tokens, territories, and cryptofae discoveries.</p>
      </div>
      <a href="/discover" class="btn btn-secondary">
        ‚Üê Back to Discover
      </a>
    </div>

    <div id="portfolio-root"></div>
  </main>

  <script>
    import { createElement } from 'react';
    import { createRoot } from 'react-dom/client';
    import PortfolioDashboard from '../islands/PortfolioDashboard';

    const container = document.getElementById('portfolio-root');
    if (container) {
      const root = createRoot(container);
      root.render(createElement(PortfolioDashboard));
    }
  </script>
</Layout>
